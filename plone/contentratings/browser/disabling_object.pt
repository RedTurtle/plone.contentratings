<fieldset tal:define="disabled options/disabled | nothing">
  <legend><span tal:omit-tag=""
                tal:content="view/legendTitle"/>
          <tal:block tal:condition="disabled">
          (<span tal:omit-tag=""
                 i18n:domain="contentratings"
                 i18n:translate="">Global</span>)          
          </tal:block>
  </legend>
  <div class="row" tal:repeat="widget view/subwidgets">
      
    <tal:block tal:condition="not: disabled">    
        <tal:block tal:condition="python:not widget.context.readonly"
                   tal:define="context nocall:view">
          <metal:block use-macro="context/@@form_macros/widget_row" />
        </tal:block>
        <tal:block tal:condition="python: widget.context.readonly and view.value"
                   tal:replace="structure python:widget.hidden()">
        </tal:block>
        <tal:block tal:condition="python: widget.context.readonly and not view.value">
            <input type="hidden" value="__new" name="widgetname"
                   tal:attributes="name widget/name;
                                   id widget/name" />
        </tal:block>
    </tal:block>
    
    <tal:block tal:condition="python: disabled and not widget.context.readonly">
      <div class="label"
           tal:content="python: widget.context.title"> Title </div>
      <div class="field"
           tal:content="python: widget._data"> Value </div>  
    </tal:block>

    
  </div>
</fieldset>
